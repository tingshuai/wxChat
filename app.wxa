<script>
import system from './static/utils/system'
var app = getApp()
export default {
  config: {
    usingComponents: {},
    pages: [
      'pages/login/index',
      'pages/home/index',
      'pages/applyTheGroup/index',
      'pages/appTheApp/index',
      'pages/fillInApplycation/index',
      'pages/groupChat/index',
      'pages/groupMsg/index',
      'pages/webView/index',
      'pages/newGroup/index',
      'pages/fileList/index',
      'pages/historyMsg/index',
      'pages/CreateRequirement/index',
      'pages/evaluate/index',
      'pages/groupList/index',
      'pages/userList/index',
    ],
    plugins: {
      WechatSI: {
        version: '0.0.9',
        provider: 'wx069ba97219f66d99'
      }
    },
    window: {
      backgroundTextStyle: 'dark',
      backgroundColor: '#efefef',
      navigationBarBackgroundColor: '#267AFC',
      navigationBarTitleText: 'TouchUI',
      navigationBarTextStyle: 'white',
      navigationStyle: 'default'
    },
    networkTimeout: {
      request: 20000
    },
    theme: {
      'theme-color': '#1aad19'
    }
  },
  globalData: {
    socketHost: 'wss://www.comayi.com', // 祝天洋 'wss://192.168.0.49', 沈鑫：192.168.1.145，192.168.1.230线上：www.china-cms.com
    httpHost: 'https://www.comayi.com', //'https://192.168.0.144',
    httpUpload: 'https://www.comayi.com', //文件上传地址......
    userMsg: {},
    openId: '', //'oc6Hd1BHJF55T1jIWr2eC2AEYoUQ',
    sessionId: '',
    userMsgReq: {},
    promise: {
      upDataGroupMsg: new Promise(()=>{}), //更新群信息......
      upDataGroupList: '', //更新群列表......
    },
    wxImg: '',
    defaultImg: '', //默认群头像...
    socketTask: {},
    registerState: '',
    headHeight: '',
    isAite: false,
    isConfirm:false,
    transData:[],//要转发的消息...
    observeScroll:{},
    groupMsg:{},//当前群信息.....
  },
  onLaunch() {
    system.attachInfo()
    var that = this
    wx.request({
      url: `${that.globalData.httpHost}/chat/attach/logo`, //请求已加入群组或者未加入群组
      data: {},
      method: 'get',
      header: {
        'content-type': 'application/json' // 默认值
      },
      success(res) {
        if (res.data.status == 200) {
          wx.setStorage({
            key: 'wxImg',
            data: res.data.data.base64Str
          })
        }
      }
    })
    // 可以通过 wx.getSetting 先查询一下用户是否授权了 "scope.record" 这个 scope
    wx.getSetting({
      success(res) {
        var loginMsg = {}
        wx.getStorage({
          key: 'loginMsg',
          success(res) {
            loginMsg = res.data
          }
        })
        if (res.authSetting['scope.userInfo'] && loginMsg.code == 200) {
          wx.getUserInfo({
            timeout: 5000,
            success(res) {
              that.globalData.userMsg = res.userInfo
            },
            fail(res) {
              system.msgTip({
                title: '提示',
                content: res.errMsg,
                scb() {},
                ccb() {}
              })
            }
          })
          wx.reLaunch({
            url: `/pages/home/index`
          })
        }
      },
      fail(res) {
        system.msgTip({
          title: '提示',
          content: res.errMsg,
          scb() {},
          ccb() {}
        })
        // system.stateMsg({title:res})
      }
    })
  },
  onHide: function() {}
}
</script>

