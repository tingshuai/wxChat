    >view{
        height: 100%;
    }
  }
  .sentType{
    transition: all 0.2s;
    display: flex;
    flex-wrap: wrap;
    align-items:center;
    justify-content: flex-start;
    border-top:1px solid #eee;
    overflow: hidden;
    height: 0px;
    .sentType_col{
      width:20%;
      text-align: center;
      position: relative;
      display:inline-block;
      .txt9{
        font-size: 11px;
        color: #666666;
      }
    }
    .sentType_col1{
      width: 17vw;
    }
    image{
      margin:0 auto;
    }
    .imgWrap{
        margin:0 auto;
        height: 58px;
        width: 58px;
        border-radius: 5px;
        overflow: hidden;
        margin-top:10px;
        margin-bottom:5px;
        image{
        }
    }
    .iconfont{
      font-size:30px;
      padding:0px 8px;
      background-color: white;
      color: #666666;
      &:active{
        opacity: 0.8;
      }
    }
  }
  .sendBtn{
    display:flex;
    align-items:center;
    padding-right:10px;
    button{
      font-size:12px;
      padding:0;
